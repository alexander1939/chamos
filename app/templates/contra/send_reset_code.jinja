<body>
    <div class="card">
        <h3 class="text-center mb-4">ðŸ”‘ Recuperar ContraseÃ±a</h3>
        <form id="resetCodeForm" method="POST">
            <div class="mb-3">
                <label for="phone" class="form-label">ðŸ“± NÃºmero de telÃ©fono (10 dÃ­gitos):</label>
                <input type="text" id="phone" name="phone" class="form-control" required maxlength="10" pattern="\d{10}" placeholder="Ingresa tu nÃºmero de telÃ©fono">
                <div id="phone-error" class="text-danger mt-1"></div> <!-- AquÃ­ se mostrarÃ¡ el error -->
            </div>

            <button type="submit" class="btn btn-primary w-100">ðŸ”„ Enviar CÃ³digo</button>
        </form>

        <div id="message" class="mt-3 text-center"></div> <!-- Mensaje de respuesta -->
    </div>

    <script>
        document.getElementById("resetCodeForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const phone = document.getElementById("phone").value;

            const response = await fetch("/sms-recover/send-reset-code", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({ phone }),
            });

            const data = await response.json();

            if (data.redirect_url) {
                window.location.href = data.redirect_url;  // Redirige a la pÃ¡gina de verificaciÃ³n
            } else {
                document.getElementById("message").textContent = data.message || data.error;
            }
        });
    </script>

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear cuenta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/auth/login.css') }}">
    <style>
        .error-message {
            color: #ff0000;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="form-container">
            <form id="registerForm" action="{{ url_for('auth.register') }}" method="POST">
                <h1>Crear cuenta</h1>

                {% with messages = get_flashed_messages(with_categories=true) %}
                {% if messages %}
                {% for category, message in messages %}
                <div class="alert alert-{{ category }}" role="alert">
                    {{ message }}
                </div>
                {% endfor %}
                {% endif %}
                {% endwith %}

                <div id="error-message" class="alert alert-danger" style="display: none;"></div>

                <div class="form-group">
                    <input type="text" name="name" id="name" class="form-input" placeholder="Nombre">
                    <div class="error-message" id="nameError"></div>
                </div>

                <div class="form-group">
                    <input type="text" name="surnames" id="surnames" class="form-input" placeholder="Apellidos">
                    <div class="error-message" id="surnamesError"></div>
                </div>

                <div class="form-group">
                    <input type="text" name="phone" id="phone" class="form-input" placeholder="Teléfono">
                    <div class="error-message" id="phoneError"></div>
                </div>

                <div class="form-group">
                    <input type="email" name="email" id="email" class="form-input" placeholder="Correo electrónico">
                    <div class="error-message" id="emailError"></div>
                </div>

                <div class="form-group">
                    <input type="password" name="password" id="password" class="form-input" placeholder="Contraseña">
                    <div class="error-message" id="passwordError"></div>
                </div>

                <div class="form-group">
                    <label for="terms">
                        <input type="checkbox" id="terms"> Acepto el
                        <a href="#">Aviso de Privacidad</a>
                    </label>
                </div>

                <button type="submit" class="form-button" id="submitButton" disabled>Crear cuenta</button>

                <p style="margin-top:20px">¿Tienes cuenta? <a href="{{ url_for('auth.login') }}">Iniciar sesión</a>
                </p>
            </form>
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ url_for('static', filename='js/apis/register_api.js') }}"></script>
    <script src="{{ url_for('static', filename='js/components/validacion.js') }}"></script>

</body>

</html>
{% extends "base.jinja" %}

{% block title %}Materias Registradas{% endblock %}

{% block content %}
<section class="section-materias py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-4 text-primary">Materias Registradas</h2>
            <p class="lead text-muted">Aquí puedes ver todas las materias que has registrado.</p>
        </div>

        <!-- Contenedor donde se mostrarán las materias -->
        <div id="materias-container" class="row row-cols-1 row-cols-md-3 g-4">
            <!-- Las materias se insertarán aquí dinámicamente con JavaScript -->
        </div>

        <!-- Mensaje de que no hay materias registradas -->
        <div id="mensaje-no-materias" class="alert alert-info" role="alert" style="display: none;">
            No tienes materias registradas.
        </div>

        <div class="text-center mt-4">
            <a href="#" class="btn btn-success btn-lg">Agregar Nueva Materia</a>
        </div>
    </div>
</section>

<!-- Incluir el script de JavaScript -->
<script src="{{ url_for('static', filename='js/apis/materia_api.js') }}"></script>
{% endblock %}
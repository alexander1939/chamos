<body>
    <div class="card">
        <h3 class="text-center mb-4">ðŸ”‘ Verificar CÃ³digo</h3>
        <form id="verifyCodeForm" method="POST">
            <div class="mb-3">
                <label for="phone" class="form-label">ðŸ“± NÃºmero de telÃ©fono:</label>
                <input type="text" id="phone" name="phone" class="form-control" required placeholder="Ingresa tu nÃºmero de telÃ©fono">
            </div>

            <div class="mb-3">
                <label for="code" class="form-label">ðŸ”¢ CÃ³digo de recuperaciÃ³n:</label>
                <input type="text" id="code" name="code" class="form-control" required placeholder="Ingresa el cÃ³digo">
            </div>

            <button type="submit" class="btn btn-primary w-100">âœ… Verificar CÃ³digo</button>
        </form>

        <div id="message" class="mt-3 text-center"></div> <!-- Mensaje de respuesta -->
    </div>

    <script>
        document.getElementById("verifyCodeForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const phone = document.getElementById("phone").value;
            const code = document.getElementById("code").value;

            try {
                const response = await fetch("/sms-recover/verify-reset-code", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({ phone, code }),
                });

                const data = await response.json();
                document.getElementById("message").textContent = data.message || data.error;

                if (response.ok) {
                    // Usa la reset_url devuelta por el backend
                    window.location.href = data.reset_url;
                }
            } catch (error) {
                document.getElementById("message").textContent = "Error al verificar el cÃ³digo. IntÃ©ntalo de nuevo.";
                console.error("Error:", error);
            }
        });
    </script>
</body>


        }

        .card h3 {
            color: #333;
            font-weight: bold;
        }

        .form-control {
            border-radius: 8px;
        }

        .form-control.is-invalid {
            border-color: #dc3545;
        }

        .btn-primary {
            border-radius: 8px;
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(to right, #5a67d8, #6b46c1);

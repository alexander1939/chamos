<link rel="stylesheet" href="{{ url_for('static', filename='css/token.css') }}">

<form method="POST">
    {{ form.hidden_tag() }}

    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
    <div class="alert alert-{{ messages[0][0] }}">
        {{ messages[0][1] }}
    </div>
    {% endif %}
    {% endwith %}

    <div class="form-group">
        <label for="nueva_contrasena">Nueva Contraseña:</label>
        {{ form.nueva_contrasena(class="form-control", required=True, id="nueva_contrasena") }}

        <div class="text-danger" id="error-nueva-contrasena" style="display: none;">
            <p>Debe contener al menos 8 caracteres, una mayúscula y un número.</p>
        </div>

        {% if form.nueva_contrasena.errors %}
        <div class="text-danger">
            {% for error in form.nueva_contrasena.errors %}
            <p>{{ error }}</p>
            {% endfor %}
        </div>
        {% endif %}
    </div>

    <div class="form-group">
        <label for="confirmar_contrasena">Confirmar Contraseña:</label>
        <input type="password" id="confirmar_contrasena" name="confirmar_contrasena" class="form-control" required>

        <div class="text-danger" id="error-contrasena" style="display: none;">
            <p>Las contraseñas no coinciden.</p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const password = document.getElementById("nueva_contrasena");
            const confirmPassword = document.getElementById("confirmar_contrasena");
            const errorDiv = document.getElementById("error-contrasena");
            const errorNuevaContrasena = document.getElementById("error-nueva-contrasena");

            function validarContrasena() {
                const regex = /^(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{8,}$/;

                // Validar formato de la nueva contraseña
                if (password.value.length > 0 && !regex.test(password.value)) {
                    errorNuevaContrasena.style.display = "block";
                } else {
                    errorNuevaContrasena.style.display = "none";
                }

                // Validar que las contraseñas coincidan (solo si ambas están llenas)
                if (password.value !== "" && confirmPassword.value !== "" && password.value !== confirmPassword.value) {
                    errorDiv.style.display = "block";
                } else {
                    errorDiv.style.display = "none";
                }
            }

            password.addEventListener("input", validarContrasena);
            confirmPassword.addEventListener("input", validarContrasena);
        });
    </script>

    <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
</form>

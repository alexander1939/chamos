{% extends "base.jinja" %}

{% block content %}
<div class="container mt-4">
    <h2 class="mb-4">Resultados para "{{ query }}" en {{ category }}</h2>

    {% if resultados %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for item in resultados %}
        <div class="col">
            <div class="card shadow-lg h-100">
                <div class="card-body">
                    {% for key, value in item.items() %}
                    {% if loop.first %}
                    <!-- Mostrar el nombre (el primer valor) arriba -->
                    <h5 class="card-title">{{ value }}</h5>
                    {% else %}
                    <div class="mb-2">
                        <span>{{ value }}</span>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <p class="text-center text-muted">No se encontraron resultados.</p>
    {% endif %}

    <div class="text-center mt-3">
        <a href="{{ url_for('auth.index') }}" class="btn btn-primary">Volver</a>
    </div>
</div>
{% endblock %}
{% block content %}
<div class="container">
    <h2 class="mt-4">{{ form_title }}</h2>
    <form method="POST" action="{{ action_url }}">
        <div class="mb-3">
            <label for="nombre" class="form-label">{{ input_title }}</label>
            <input type="text" class="form-control" id="nombre" name="nombre" value="{{ item_name }}" required>
        </div>
        <div class="mb-3">
            <label for="descripcion" class="form-label">{{ desc_title }}</label>
            <textarea class="form-control" id="descripcion" name="descripcion" rows="4"
                required>{{ item_description }}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">{{ button_text }}</button>
    </form>
    <a href="{{ url_for('catalo.mostrar_contenido', modulo=modulo) }}" class="btn btn-secondary mt-3">Cancelar</a>
</div>
{% endblock %}
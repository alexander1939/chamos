{% extends "base.jinja" %}

{% block title %}Gestión de Contenido{% endblock %}

{% block content %}
<div class="search-container d-flex">
    <input type="text" id="search-input" placeholder="Buscar por nombre ....." class="form-control"
        onkeyup="filterContent()">
    <button type="button" id="cancel-search" class="btn btn-secondary ms-2" style="display:none;"
        onclick="cancelSearch()">Cancelar</button>
</div>

<!-- Contenedor donde el formulario será insertado dinámicamente -->
<div id="content-container">
    <h2 class="text-center">{{ form_title }}</h2>
    <!-- Aquí se mostrará el formulario dinámico cuando JavaScript lo cargue -->
</div>

<script src="{{ url_for('static', filename='js/apis/agregar.js') }}"></script>
<script src="{{ url_for('static', filename='js/apis/catalago.js') }}"></script>
<script src="{{ url_for('static', filename='js/apis/user_api.js') }}"></script>
<script src="{{ url_for('static', filename='js/main.js') }}"></script>
{% endblock %}

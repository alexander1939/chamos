{% extends "base.jinja" %}

{% block title %}Sesiones Activas{% endblock %}

{% block content %}
<div class="container">
    <h2>Sesiones Activas</h2>

    <div class="mb-3">
        <label class="form-check-label">
            <input type="checkbox" id="toggle-multiple-sessions" class="form-check-input">
            Permitir múltiples sesiones
        </label>
    </div>

    <div class="mb-3">
        <label class="form-check-label">
            <input type="checkbox" id="toggle-2fa" class="form-check-input">
            Habilitar verificación en dos pasos (2FA)
        </label>
    </div>

    <table id="sessionsTable" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Dirección IP</th>
                <th>Agente de Usuario</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script src="{{ url_for('static', filename='js/apis/sessions.js') }}"></script>
{% endblock %}
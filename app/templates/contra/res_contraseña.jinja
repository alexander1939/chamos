<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restablecer Contrase√±a</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f7f8fc;
        }

        .card {
            width: 100%;
            max-width: 400px;
            padding: 25px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-radius: 12px;
            background-color: #ffffff;
            animation: fadeIn 0.6s ease-in-out;
        }

        .card h3 {
            color: #333;
            font-weight: bold;
        }

        .form-control {
            border-radius: 8px;
        }

        .text-danger {
            border-radius: 8px;
            padding: 8px;
            font-size: 0.9rem;
        }

        .btn-primary {
            border-radius: 8px;
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
            padding: 12px;
            font-size: 18px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(to right, #5a67d8, #6b46c1);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>
</head>

<body>
    <div class="card">
        <h3 class="text-center mb-4">üîí Restablecer Contrase√±a</h3>

        {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
        <div class="alert alert-{{ messages[0][0] }} text-center">
            {{ messages[0][1] }}
        </div>
        {% endif %}
        {% endwith %}

        <form id="password-reset-form" action="{{ url_for('recovery.restablecer_contra', token=token) }}" method="POST"
            onsubmit="return validarContrasena()">
            <input type="hidden" name="token" value="{{ token }}">

            <div class="mb-3">
                <label for="new_password" class="form-label">üîë Nueva Contrase√±a:</label>
                <input type="password" id="new_password" name="new_password" class="form-control"
                    placeholder="Tu nueva contrase√±a" required>

                <div class="text-danger" id="error-nueva-contrasena" style="display: none;">
                    ‚ö†Ô∏è La contrase√±a debe tener al menos 8 caracteres, una may√∫scula, una min√∫scula y un n√∫mero.
                </div>
            </div>

            <div class="mb-3">
                <label for="confirm_password" class="form-label">üîÑ Confirmar Contrase√±a:</label>
                <input type="password" id="confirm_password" name="confirm_password" class="form-control"
                    placeholder="Confirma tu contrase√±a" required>

                <div class="text-danger" id="error-contrasena" style="display: none;">
                    ‚ö†Ô∏è Las contrase√±as no coinciden.
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">‚úÖ Restablecer Contrase√±a</button>
        </form>
    </div>

    <script>
        function validarContrasena() {
            const nuevaContrasena = document.getElementById('new_password').value;
            const confirmarContrasena = document.getElementById('confirm_password').value;
            const errorNuevaContrasena = document.getElementById('error-nueva-contrasena');
            const errorContrasena = document.getElementById('error-contrasena');

            const regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{8,}$/;

            let valido = true;

            if (!regex.test(nuevaContrasena)) {
                errorNuevaContrasena.style.display = 'block';
                valido = false;
            } else {
                errorNuevaContrasena.style.display = 'none';
            }

            if (nuevaContrasena !== confirmarContrasena) {
                errorContrasena.style.display = 'block';
                valido = false;
            } else {
                errorContrasena.style.display = 'none';
            }

            return valido;
        }
    </script>
</body>

</html>